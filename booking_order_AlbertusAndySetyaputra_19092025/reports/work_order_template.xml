<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_workorder_document">
        <t t-call="report.external_layout">
            <t t-set="doc" t-value="doc" />
            <div class="page">
                <div class="oe_structure"/>
                <table class="table table-bordered" style="width: 100%;">
                    <tbody>
                        <tr>
                            <td style="border: 1px solid black;" colspan="4"><strong t-field="doc.name"/></td>
                        </tr>
                        <tr>
                            <td style="width: 25%; border: 1px solid black;"><strong>Team Name</strong></td>
                            <td style="width: 25%; border: 1px solid black;"><span t-field="doc.team_id"/></td>
                            <td style="width: 25%; border: 1px solid black;"><strong>Team Name</strong></td>
                            <td style="width: 25%; border: 1px solid black;"><span t-field="doc.partner_id"/></td>
                        </tr>
                        <tr>
                            <td style="border: 1px solid black;"><strong>Booking Order Ref</strong></td>
                            <td style="border: 1px solid black;"><span t-field="doc.order_id"/></td>
                            <td style="border: 1px solid black;"><strong>Date</strong></td>
                            <td style="border: 1px solid black;">
                                <span t-field="doc.start_date" 
                                    t-options='{"widget": "datetime", "format": "dd/MM/yyyy HH:mm:ss"}'/> - 
                                <span t-field="doc.end_date" 
                                    t-options='{"widget": "datetime", "format": "dd/MM/yyyy HH:mm:ss"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td style="border: 1px solid black;" colspan="4">
                                <strong>NOTES:</strong><br/><span t-field="doc.note"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="border: 1px solid black;" colspan="4">
                                <strong>Signature:</strong><br/><br/><br/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

    <template id="report_workorder">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="booking_order_AlbertusAndySetyaputra_19092025.report_workorder_document" />
            </t>
        </t>
    </template>
</odoo>
