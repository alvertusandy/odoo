<odoo>
    <record id="material_material_view_form" model="ir.ui.view">
        <field name="name">material.material.view.form</field>
        <field name="model">material.material</field>
        <field name="arch" type="xml">
            <form string="Materials">
                <header>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="code"/>
                            <field name="types"/>
                            <field name="buy_price"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="material_material_view_tree" model="ir.ui.view">
        <field name="name">material.material.view.tree</field>
        <field name="model">material.material</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="code"/>
                <field name="types"/>
                <field name="buy_price"/>
            </tree>
        </field>
    </record>

    <record id="material_material_view_search" model="ir.ui.view">
            <field name="name">material.material.view.search</field>
            <field name="model">material.material</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="code"/>
                    <field name="types"/>
                    <separator/>
                    <filter name="fabric_filter" string="Type Fabric" domain="[('types', '=', 'fabric')]"/>
                    <filter name="jeans_filter" string="Type Jeans" domain="[('types', '=', 'jeans')]"/>
                    <filter name="cotton_filter" string="Type Fabric" domain="[('types', '=', 'cotton')]"/>
                </search>
            </field>
        </record>

    <record id="action_material_material" model="ir.actions.act_window">
        <field name="name">Materials</field>
        <field name="res_model">material.material</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="odoo_backend_test.material_material_view_tree"/>
        <field name="search_view_id" ref="odoo_backend_test.material_material_view_search"/>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Membuat material baru
            </p>
        </field>
    </record>
</odoo>
